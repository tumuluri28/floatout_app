<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.floatout.android.floatout_v01.StoryFeedActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextureView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/screensize"/>


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="#95424242"/>

            <TextView
                android:id="@+id/storyDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="#66424242"
                android:textSize="24dp"
                android:layout_above="@+id/storylocationbutton"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="46dp" />

            <ImageButton
                android:id="@+id/storylike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/storylocationbutton"
                android:layout_margin="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/storyDesc"
                android:background="@drawable/location" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
